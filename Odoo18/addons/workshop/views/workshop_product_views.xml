<odoo>
    <!-- List view -->
    <record id="workshop_product_list" model="ir.ui.view">
        <field name="name">workshop.product.list</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="default_order">name asc</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_workshop_product" invisible="1" />
                <field name="min_stock" string="Min Stock" />
                <field name="max_stock" string="Max Stock" />
                <field name="stock_status" widget="badge"
                    decoration-success="stock_status == 'sufficient'"
                    decoration-warning="stock_status == 'low'"
                    decoration-danger="stock_status == 'out'"
                    decoration-info="stock_status in ['excess', 'unknown']" />
            </xpath>
        </field>
    </record>

    <!-- Form view -->
    <record id="workshop_product_form" model="ir.ui.view">
        <field name="name">workshop.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='id']" position="before">
                <field name="is_workshop_product" invisible="1" />
            </xpath>

            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <div class="o_row" invisible="('is_workshop_product', '=', False)">
                    <field name="stock_status" widget="badge" />
                </div>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="after">
                <group string="ConfiguraciÃ³n del Taller"
                    invisible="('is_workshop_product', '=', False)">
                    <group>
                        <field name="min_stock" />
                        <field name="max_stock" />
                    </group>
                    <group>
                        <field name="stock_status" readonly="1" />
                        <button name="action_view_maintenances"
                            type="object"
                            icon="fa-wrench"
                            string="Ver Mantenimientos"
                            class="oe_inline" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Action to open product views -->
    <record id="action_product" model="ir.actions.act_window">
        <field name="name">Productos del Taller</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_workshop_product', '=', True)]</field>
        <field name="context">{
            'search_default_is_workshop_product': 1,
            'default_is_workshop_product': True
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No workshop products found.
            </p>
            <p>
                Products used in workshop maintenance operations.
                Establishes minimum and maximum stock levels for inventory control.
            </p>
        </field>
    </record>
</odoo>