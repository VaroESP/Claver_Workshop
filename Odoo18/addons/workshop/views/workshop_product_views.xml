<odoo>
    <!-- List view -->
    <record id="workshop_product_list" model="ir.ui.view">
        <field name="name">workshop.product.list</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list string="Workshop Products">
                <field name="name" string="Product Name" />
                <field name="default_code" string="Reference" />
                <field name="min_stock" string="Min Stock" />
                <field name="max_stock" string="Max Stock" />
                <field name="stock_status" widget="badge"
                    decoration-success="stock_status == 'sufficient'"
                    decoration-warning="stock_status == 'low'"
                    decoration-danger="stock_status == 'out'"
                    decoration-info="stock_status in ['excess', 'unknown']" />
                <field name="list_price" string="Price" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="workshop_product_form" model="ir.ui.view">
        <field name="name">workshop.product.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                        <div class="o_row">
                            <field name="is_workshop_product" invisible="1" />
                            <field name="stock_status" widget="badge" />
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="default_code" />
                            <field name="categ_id" string="Category" />
                            <field name="type" string="Product Type" />
                        </group>
                        <group>
                            <field name="list_price" string="Sale Price" />
                            <field name="standard_price" string="Cost" />
                        </group>
                    </group>
                    <group string="Stock Configuration">
                        <group>
                            <field name="min_stock" />
                            <field name="max_stock" />
                            <field name="product_variant_count" string="Variants" readonly="1" />
                        </group>
                        <group>
                            <field name="stock_status" readonly="1" />
                            <field name="type" string="Product Type" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open product views -->
    <record id="action_product" model="ir.actions.act_window">
        <field name="name">Workshop Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_workshop_product', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No workshop products found.
            </p>
            <p>
                Products used in workshop maintenance operations.
                Set minimum and maximum stock levels for inventory control.
            </p>
        </field>
    </record>
</odoo>