<odoo>
    <!-- List view -->
    <record id="workshop_product_list" model="ir.ui.view">
        <field name="name">workshop.product.list</field>
        <field name="model">workshop.product</field>
        <field name="arch" type="xml">
            <list name="Products">
                <field name="id"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="workshop_product_form" model="ir.ui.view">
        <field name="name">workshop.product.form</field>
        <field name="model">workshop.product</field>
        <field name="arch" type="xml">
            <form>
                <field name="id"/>
            </form>
        </field>
    </record>

    <!-- Action to open product views -->
    <record id="action_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">workshop.product</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="workshop_product_list" />
    </record>
</odoo>