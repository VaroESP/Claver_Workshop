<odoo>
    <!-- List view -->
    <record id="view_workshop_maintenance_list" model="ir.ui.view">
        <field name="name">workshop.maintenance.list</field>
        <field name="model">workshop.maintenance</field>
        <field name="arch" type="xml">
            <list string="Maintenances">
                <field name="name" width="20%" />
                <field name="vehicle_id" width="20%" />
                <field name="date_request" string="Date request" width="20%" />
                <field name="mechanic_id" string="Mechanic" width="20%" />
                <field name="date_delivery" string="Date delivery" width="20%" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_workshop_maintenance_form" model="ir.ui.view">
        <field name="name">workshop.maintenance.form</field>
        <field name="model">workshop.maintenance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name='name' />
                    </h1>
                    <group>
                        <group>
                            <field name="vehicle_id" />
                            <field name="responsible_mechanic_id" />
                        </group>
                        <group>
                            <field name="date_request" force_save="1" />
                            <field name="date_delivery" force_save="1" />
                        </group>
                    </group>
                    <notebook colspan="4" invisible="not id">
                        <page string="Products" name="products" autofocus="autofocus">
                            <field name="product_ids" mode="list">
                                <list string="Products">
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action views -->
    <record id="action_maintenance" model="ir.actions.act_window">
        <field name="name">Maintenances</field>
        <field name="res_model">workshop.maintenance</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_workshop_maintenance_list" />
    </record>
</odoo>