<odoo>
    <!-- Kanban view -->
    <record id="view_workshop_customer_kanban" model="ir.ui.view">
        <field name="name">workshop.customer.kanban</field>
        <field name="model">res.partner</field>
        <field eval="1" name="priority" />
        <field name="arch" type="xml">
            <kanban>
                <field name="avatar_128" />
                <field name="name" />
                <field name="email" />
                <field name="phone" />
                <templates>
                    <t t-name="card">
                        <div class="d-flex">
                            <div class="me-2">
                                <field name="avatar_128" widget="image"
                                    options="{'size': [100, 100]}" />
                            </div>
                            <div class="p-2">
                                <div>
                                    <strong>
                                        <field name="name" />
                                    </strong>
                                </div>
                                <div>
                                    <field name="email" />
                                </div>
                                <div>
                                    <field name="phone" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List view -->
    <record id="view_workshop_customer_list" model="ir.ui.view">
        <field name="name">workshop.customer.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list name="Customers">
                <field name="name" />
                <field name="email" />
                <field name="phone" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_workshop_customer_form" model="ir.ui.view">
        <field name="name">workshop.customer.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="avatar_128" widget="image" class="oe_avatar" />
                    <div name="button_box">
                        <button name="action_vehicle"
                            type="object"
                            invisible="vehicle_count == 0"
                            icon="fa-car">
                            <field name="vehicle_count" readonly="1" widget="statinfo" />
                        </button>
                        <button name="action_maintenance"
                            type="object"
                            invisible="maintenance_count == 0"
                            icon="fa-wrench">
                            <field name="maintenance_count" readonly="1" widget="statinfo" />
                        </button>
                    </div>
                    <div>
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <group name="address" string="Address">
                            <field name="street" placeholder="Street" />
                            <group>
                                <div>
                                    <field name="postal_code" placeholder="Postal Code" />
                                </div>
                            </group>
                            <group>
                                <div>
                                    <field name="city" placeholder="City" />
                                </div>
                            </group>
                            <group>
                                <div>
                                    <field name="state_id" placeholder="State"
                                        groups="hr.group_hr_user" />
                                </div>
                            </group>
                            <group>
                                <div>
                                    <field name="country_id" placeholder="Country"
                                        groups="hr.group_hr_user" />
                                </div>
                            </group>
                        </group>
                        <group name="contact" string="Contact">
                            <field name="email" />
                            <field name="phone" />
                        </group>
                    </group>
                    <notebook colspan="4" invisible="not id">
                        <page string="Vehicles" name="vehicles" autofocus="autofocus">
                            <field name="vehicle_ids" mode="kanban">
                                <kanban>
                                    <field name="name" />
                                    <field name="plate" />
                                    <templates>
                                        <t t-name="card" class="flex-row">
                                            <main class="p-2">

                                                <strong>
                                                    <field name="name" />
                                                </strong>
                                                <field name="plate" />


                                            </main>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action views -->
    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="view_workshop_customer_kanban" />
    </record>
</odoo>