<odoo>
    <!-- List view -->
    <record id="cw_vehicle_list" model="ir.ui.view">
        <field name="name">cw.vehicle.list</field>
        <field name="model">cw.vehicle</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="id" />
            </list>
        </field>
    </record>

    <!-- Action to open vehicle views -->
        <record id="action_vehicle" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="res_model">cw.vehicle</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="cw_vehicle_list"/>
        </record>
</odoo>
