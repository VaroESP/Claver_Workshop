<odoo>
    <!-- List view -->
    <record id="cw_product_list" model="ir.ui.view">
        <field name="name">cw.product.list</field>
        <field name="model">cw.product</field>
        <field name="arch" type="xml">
            <list string="Products">
                <field name="id" />
            </list>
        </field>
    </record>

    <!-- Action to open product views -->
        <record id="action_product" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">cw.product</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="cw_product_list"/>
        </record>
</odoo>
